server {
        root /var/www/html;
        index index.html index.htm index.nginx-debian.html stud.txt;
    server_name lt-2021-083.ml; # managed by Certbot
        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                #try_files $uri $uri/ =404;
                proxy_pass http://127.0.0.1:8081;
        }

        location /web0083 {
                try_files $uri /data/stud.txt =404;
} 
        location /secret {
                auth_basic "Admin Area";
                auth_basic_user_file /etc/nginx/.htpasswd;
                try_files $uri /data/sec.txt;
}

    listen [::]:443 ssl ipv6only=on; # managed by Certbot
    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/lt-2021-083.ml/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/lt-2021-083.ml/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}


server {
    if ($host = lt-2021-083.ml) {
        return 301 https://$host$request_uri;
    } # managed by Certbot
        listen 80 ;
        listen [::]:80 ;
    server_name lt-2021-083.ml;
    return 404; # managed by Certbot
}
